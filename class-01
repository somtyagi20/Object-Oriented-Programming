#include<iostream>
#include<string.h>
using namespace std;
class student{
	string name;
	string roll_no;
	int year;
	
	public: 
	        void ask_details(){
	        	cout<<"Enter Name : ";
	        	cin>>name;
	        	cout<<" Enter Roll Number :";
	        	cin>>roll_no;
	        	cout<<" Enter year :";
	        	cin>>year;
	        	
			}
	        void showdata(){	
			    cout<<"****Students details****"<<endl ;   
	        	cout<<"Name: "<<name<<endl;
	        	cout<<"Roll Number : "<<roll_no<<endl;
	        	cout<<"Year : "<<year<<endl;
			}
};
int main(){
	student satwik;
	satwik.ask_details();
	satwik.showdata();
}
