#include<iostream>
#include<string.h>
using namespace std;
class student{
	string name;
	string roll_no;
	int year;
	
	public: 
	        void ask_details(){
	        	cout<<" Enter Name : ";
	        	getline(cin,name);
	        	cout<<" Enter Roll Number :";
	        	getline(cin,roll_no);
	        	cout<<" Enter year :";
	        	cin>>year;
	        	
			}
	        void showdata(){	
			    cout<<endl<<"****Students details****"<<endl ;   
	        	cout<<"Name: "<<name<<endl;
	        	cout<<"Roll Number : "<<roll_no<<endl;
	        	cout<<"Year : "<<year<<endl;
			}
};
int main(){
	student a;
	a.ask_details();
	a.showdata();
}
